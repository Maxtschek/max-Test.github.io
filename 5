#include "mfs.h"

int main(){
  init();
  initMFS();
  Serial.begin(9600);

  uint32_t num = 0;
  uint8_t counter = 0;
  uint8_t button1;
  uint8_t button1old = digitalRead(A1);
  uint8_t button2;
  uint8_t button2old = digitalRead(A2);

  while (1) {
    button1 = digitalRead(A1);
    button2 = digitalRead(A2);
    if (button1 < button1old) {
      num = num * 10 + 1;
      counter ++;
    }
    if (button2 < button2old) {
      num = num * 10 + 0;
      counter ++;
    }
    if counter > 7 {
      writeDecToSegmen(num)
    }
    writeDecToSegment(num);

    button1old = button1;
    button2old = button2;
  }
}
